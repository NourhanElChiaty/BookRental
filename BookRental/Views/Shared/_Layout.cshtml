<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-light">

        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("Book Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            
            <ul class="nav navbar-nav">
                <li class="nav-link">@Html.ActionLink("Books", "ReadBooks", "Book")</li>
                <li class="nav-link">@Html.ActionLink("My Profile", "DisplaytMe", "Customer")</li>
                <li class="nav-link">@Html.ActionLink("My Books", "ViewRentedBooks", "Customer")</li>
            </ul>
            @Html.Partial("_LoginPartial")

        </div>
        
        </nav>
        
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
